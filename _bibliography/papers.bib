author = {Wernersbach, Julia and Ng, Douglas and Lau, Sophie Ka Ling and Zhu, Wenqi and Lai, Ziyue},
title = {EcoWatt: An Electricity Management App to Illuminate Community-Driven Sustainability in Student Accommodations},
